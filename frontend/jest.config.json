{
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": ["<rootDir>/test/setup.ts"],
  "moduleNameMapping": {
    "^@/(.*)$": "<rootDir>/$1"
  },
  "transform": {
    "^.+\\.(ts|tsx)$": [
      "ts-jest",
      {
        "tsconfig": {
          "jsx": "react-jsx"
        }
      }
    ]
  },
  "testMatch": [
    "<rootDir>/test/**/*.test.(ts|tsx)"
  ],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}",
    "contexts/**/*.{ts,tsx}",
    "app/**/page.{ts,tsx}",
    "!src/**/*.d.ts"
  ],
  "transformIgnorePatterns": [
    "node_modules/(?!(.*\\.mjs$))"
  ]
}
