{
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": ["<rootDir>/test/setup.ts"],
  "moduleNameMapping": {
    "^@/(.*)$": "<rootDir>/$1"
  },
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "testMatch": [
    "<rootDir>/test/**/*.test.(ts|tsx)"
  ],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}",
    "!src/**/*.d.ts"
  ]
}
